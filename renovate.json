
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "stopUpdatingLabel": "take-a-break-renovate",
  "schedule": [
    "after 07:30am",
    "before 07:15pm",
    "every weekday"
  ],
  "prHourlyLimit": 1,
  "prConcurrentLimit": 0,
  "minimumReleaseAge": "0 days",
  "timezone": "Europe/Berlin",
  "extends": [
    "config:recommended",
    "config:best-practices",
    "default:automergeDigest",
    "docker:pinDigests",
    "group:kubernetes",
    "group:goOpenapi",
    "helpers:pinGitHubActionDigests",
    "security:openssf-scorecard",
    ":dependencyDashboard",
    ":rebaseStalePrs"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepNames": [
        "go"
      ],
      "matchDepTypes": [
        "golang"
      ],
      "rangeStrategy": "bump"
    },
    {
      "description": "Ignore version  for landscaper-service in integration tests as used locally",
      "matchManagers": [
        "gomod"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/github.com/openmcp-project/landscaper-service/"
      ]
    },
    {
      "description": "Combine all patch updates in GO in a single PR",
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch",
      "matchPackageNames": [
        "*"
      ],
      "matchDatasources": [
        "go"
      ],
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "rebaseWhen": "auto"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "rebaseWhen": "auto"
    },
    {
      "matchPackageNames": [
        "github.com/openmcp-project/landscaper",
        "github.com/openmcp-project/landscaper/apis",
        "github.com/openmcp-project/landscaper/controller-utils"
      ],
      "description": "Update references in go.mod, integration-test/go.mod and .landscaper/ocm-settings.yaml",
      "rebaseWhen": "auto",
      "automerge": true,
      "automergeType": "pr-comment",
      "automergeComment": "chore(deps): new Landscaper version references (automerge)",
      "groupName": "openmcp-project/landscaper",
      "groupSlug": "landscaper",
      "matchFileNames": [
        "go.mod",
        "integration-test/go.mod",
        ".landscaper/ocm-settings.yaml"
      ],
      "versioning": "semver",
      "minimumReleaseAge": "0 days",
      "enabled": true
    },
    {
      "matchPackageNames": [
        "kubernetes/ingress-nginx",
        "k8s.gcr.io/ingress-nginx/controller"
      ],
      "groupName": "Ingress Nginx updates"
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "ingress-nginx"
      ],
      "registryUrls": [
        "https://kubernetes.github.io/ingress-nginx"
      ]
    }
  ],
  "customManagers": [
    {
      "description": "Landscaper version",
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.landscaper/ocm-settings\\.yaml/"
      ],
      "matchStrings": [
        "LANDSCAPER_VERSION:\\s*v(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "openmcp-project/landscaper",
      "datasourceTemplate": "github-tags"
    },
    {
      "description": "Match in Makefile and Dockerfile",
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/|\\.)([Dd]ocker|[Cc]ontainer)file$/",
        "/(^|/)([Dd]ocker|[Cc]ontainer)file[^/]*$/",
        "/(^|/)Makefile$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?) depName=(?<depName>[^\\s]+?)(?: (lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?\\s(?:ENV |ARG )?.+?_VERSION ?(?:\\?=|=)\"? ?(?<currentValue>.+?)\"?\\s"
      ]
    },
    {
      "description": "Match in ocm-settings.yaml",
      "customType": "regex",
      "managerFilePatterns": [
        "/.landscaper/ocm-settings.yaml/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?) depName=(?<depName>[^\\s]+?)(?: (lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?\\s(?:ENV |ARG )?.+?_VERSION ?(?:\\?=|=|: )? ?(?<currentValue>.+?)\"?\\s"
      ]
    },
    {
      "description": "Ingress Nginx chart version",
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.landscaper/ocm-settings\\.yaml/"
      ],
      "matchStrings": [
        "INGRESS_NGINX_CHART_VERSION:\\s*(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "kubernetes/ingress-nginx",
      "datasourceTemplate": "helm",
      "packageNameTemplate": "ingress-nginx",
      "registryUrlTemplate": "artifacthub.io/packages/helm"
    },
    {
      "description": "Ingress Nginx image version",
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.landscaper/ocm-settings\\.yaml/"
      ],
      "matchStrings": [
        "INGRESS_NGINX_IMAGE_VERSION:\\s*v(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "k8s.gcr.io/ingress-nginx/controller",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Gardenlinux in several yaml files",
      "managerFilePatterns": [
        "/.landscaper/landscaper-instance/test/internal-dataplane/values-shoot.yaml/"
      ],
      "matchStrings": [
        "gardenlinux\\s.*version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "gardener-live-gardenlinux-supported",
      "versioningTemplate": "semver-coerced",
      "datasourceTemplate": "custom.gardener-live-gardenlinux-supported"
    }

  ],
  "customDatasources": {
    "gardener-live-gardenlinux-supported": {
      "defaultRegistryUrlTemplate": "https://api.live.gardener.cloud.sap/apis/core.gardener.cloud/v1beta1/cloudprofiles/aws",
      "transformTemplates": [
        "{\"releases\": $$.spec.machineImages[name = 'gardenlinux'][].versions[classification = 'supported'].{\"version\": $.version},\"sourceUrl\": \"https://github.com/gardenlinux/gardenlinux\",\"homepage\": \"https://pages.github.tools.sap/kubernetes/gardener/docs/landscapes/live/pam/#gardenlinux\"}"
      ]
    }
  }
}
